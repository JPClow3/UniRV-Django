# ============================================
# AgroHub - Development Environment
# ============================================
# Copy to .env to use locally
# SQLite is the default for instant local testing - no Docker required!

# Django Core
SECRET_KEY=django-insecure-dev-key-change-in-production
DJANGO_DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,[::1]
SITE_URL=http://localhost:8000

# Database - SQLite (instant local testing, no Docker needed)
DATABASE_URL=sqlite:///db.sqlite3

# For Docker PostgreSQL testing instead (requires: docker-compose up -d db redis)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/agrohub_dev

# Redis - Local
# Option A: Single URL (preferred)
REDIS_URL=redis://localhost:6379/1

# Option B: Individual variables (uncomment if not using REDIS_URL)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

CACHE_VERSION=1

# Celery - Development (disabled by default)
USE_CELERY=False
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email - Console backend (prints emails to terminal)
# This is perfect for development - see all emails without sending
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=noreply@agrohub.unirv.edu.br

# Frontend - Development settings
TAILWIND_COMPILE_ON_THE_FLY=True
WHITENOISE_MAX_AGE=0

# Logging
DJANGO_LOG_LEVEL=DEBUG
DJANGO_LOG_TO_FILE=False

# Profiling (optional - disabled by default)
ENABLE_SILK=False

# Partners (optional)
PARTNERS=SENAI,SEBRAE,FAPEG

