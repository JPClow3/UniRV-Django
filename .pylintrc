[MASTER]
# Use multiple processes to speed up Pylint
jobs=0

[MESSAGES CONTROL]
# Disable false positives for Django
disable=
    # Django ORM false positives
    no-member,
    # Django model managers
    E1101,
    # Template class suggestions (bg-gradient-to-r is correct, linter is wrong)
    C0103,
    # Django style guide exceptions
    C0103,
    # Too many arguments/attributes (Django models have many)
    R0902,
    R0913,
    # Too many public methods (Django views have many)
    R0904,
    # Too many branches/locals (complex views)
    R0912,
    R0915,
    # Unused imports (sometimes needed for type hints)
    W0611,
    # Redefining names (Django patterns)
    W0621,
    # Catching too general exception (sometimes needed)
    W0703,
    # Consider using 'with' (Django patterns)
    R1732,
    # Unnecessary pass (sometimes needed for clarity)
    W0107

[FORMAT]
# Maximum number of characters on a single line
max-line-length=120

[TYPECHECK]
# List of members which are set dynamically and missed by pylint inference
# and so shouldn't trigger E1101 when accessed
generated-members=objects,DoesNotExist,MultipleObjectsReturned

[DESIGN]
# Maximum number of arguments for function / method
max-args=10
# Maximum number of attributes for a class
max-attributes=15
# Maximum number of boolean expressions in an if statement
max-bool-expr=5
# Maximum number of branch for function / method body
max-branches=15
# Maximum number of locals for function / method body
max-locals=20
# Maximum number of parents for a class
max-parents=7
# Maximum number of public methods for a class
max-public-methods=25
# Maximum number of return / yield for function / method body
max-returns=8
# Maximum number of statements in function / method body
max-statements=60

[IMPORTS]
# Allow wildcard imports (Django uses them)
allow-wildcard-with-all=yes

