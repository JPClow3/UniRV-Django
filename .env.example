# ============================================
# AgroHub - Environment Variables
# ============================================
# Copy this file to .env and configure the values
# DO NOT commit .env to version control
#
# Generate SECRET_KEY:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# ============================================

# ============================================
# REQUIRED - Core Django Settings
# ============================================

# SECRET_KEY: Django secret key for cryptographic signing
# REQUIRED: Generate a unique key for production
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-dev-key-change-in-production

# DJANGO_DEBUG: Enable debug mode (True/False)
# REQUIRED: Set to False in production
# WARNING: Never set to True in production - exposes sensitive information
DJANGO_DEBUG=True

# ALLOWED_HOSTS: Comma-separated list of allowed host/domain names
# REQUIRED in production: Set to your domain(s)
# Example: ALLOWED_HOSTS=example.com,www.example.com
# In development, localhost is automatically allowed
ALLOWED_HOSTS=

# ============================================
# OPTIONAL - Email Configuration
# ============================================

# EMAIL_BACKEND: Django email backend
# Options: 
#   - django.core.mail.backends.console.EmailBackend (development - prints to console)
#   - django.core.mail.backends.smtp.EmailBackend (production - uses SMTP)
#   - django.core.mail.backends.filebased.EmailBackend (development - saves to files)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# EMAIL_HOST: SMTP server hostname
# Example: smtp.gmail.com, smtp.sendgrid.net
EMAIL_HOST=localhost

# EMAIL_PORT: SMTP server port
# Common ports: 587 (TLS), 465 (SSL), 25 (unencrypted)
EMAIL_PORT=587

# EMAIL_USE_TLS: Use TLS encryption (True/False)
# Set to True for port 587, False for port 465 (SSL)
EMAIL_USE_TLS=True

# EMAIL_HOST_USER: SMTP server username
# Leave empty if not using authentication
EMAIL_HOST_USER=

# EMAIL_HOST_PASSWORD: SMTP server password
# Leave empty if not using authentication
EMAIL_HOST_PASSWORD=

# DEFAULT_FROM_EMAIL: Default sender email address
# Used for system emails (password reset, notifications, etc.)
DEFAULT_FROM_EMAIL=noreply@agrohub.unirv.edu.br

# ============================================
# OPTIONAL - Redis Cache Configuration
# ============================================

# REDIS_HOST: Redis server hostname
# Leave empty to use LocMemCache (development default)
# Example: localhost, redis.example.com
REDIS_HOST=

# REDIS_PORT: Redis server port
# Default: 6379
REDIS_PORT=6379

# ============================================
# OPTIONAL - Logging Configuration
# ============================================

# DJANGO_LOG_TO_FILE: Enable file logging (True/False)
# If True, logs will be written to files in DJANGO_LOG_DIR
# Default: False (logs only to console)
DJANGO_LOG_TO_FILE=False

# DJANGO_LOG_DIR: Directory for log files
# Default: ./logs (relative to project root)
# Ensure this directory exists and is writable
DJANGO_LOG_DIR=./logs

# DJANGO_LOG_LEVEL: Logging level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
DJANGO_LOG_LEVEL=INFO

# ============================================
# OPTIONAL - Static Files & Compression
# ============================================

# COMPRESS_ENABLED: Enable CSS/JS compression (True/False)
# Set to True in production for better performance
# Default: False in development, True in production (when DEBUG=False)
COMPRESS_ENABLED=

# WHITENOISE_MAX_AGE: Cache max age for static files (seconds)
# Development: 3600 (1 hour)
# Production: 31536000 (1 year)
# Can be overridden for Lighthouse testing
WHITENOISE_MAX_AGE=

# ============================================
# OPTIONAL - Site Configuration
# ============================================

# SITE_URL: Base URL of the site (for email links, etc.)
# Example: https://agrohub.unirv.edu.br
# Default: http://localhost:7000
SITE_URL=http://localhost:7000

# PARTNERS: Comma-separated partner names for home page marquee
# Default: SENAI,SEBRAE,FAPEG,FINEP,UNIRV,INOVALAB
# Example: PARTNERS=SENAI,SEBRAE,FAPEG,FINEP,UNIRV,INOVALAB,NEWPARTNER
# PARTNERS=

# ============================================
# OPTIONAL - NPM Configuration
# ============================================

# NPM_BIN_PATH: Path to npm binary (auto-detected if not set)
# Only set if npm is not in PATH
# Example: /usr/bin/npm, C:\Program Files\nodejs\npm.cmd
NPM_BIN_PATH=
