# ============================================
# AgroHub - Production Environment Variables
# ============================================
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to version control

# ============================================
# CRITICAL - MUST SET
# ============================================

# Secret key for Django (generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
SECRET_KEY=your-secure-secret-key-here

# Debug mode - MUST be False in production
DJANGO_DEBUG=False

# Allowed hosts - comma-separated list of domains
# Example: ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ============================================
# DATABASE (PostgreSQL recommended for production)
# ============================================
# If DB_NAME is set, PostgreSQL will be used
# If not set, SQLite will be used (not recommended for production)

DB_NAME=agrohub_production
DB_USER=agrohub_user
DB_PASSWORD=secure-database-password
DB_HOST=localhost
DB_PORT=5432

# ============================================
# REDIS (optional but recommended for caching)
# ============================================
# If REDIS_HOST is set, Redis will be used for caching
# If not set, LocMemCache will be used (not recommended for production)

REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password-here
# REDIS_MAX_CONNECTIONS=50
# REDIS_URL=redis://:your-redis-password@localhost:6379/1

# Cache versioning (increment to force cache purge on deploy)
CACHE_VERSION=1

# ============================================
# EMAIL (for notifications and password reset)
# ============================================
# If EMAIL_HOST is set, SMTP will be used
# If not set, console backend will be used (emails printed to console)

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# Site URL for email links and absolute URLs
SITE_URL=https://yourdomain.com

# Logging configuration
DJANGO_LOG_TO_FILE=true
DJANGO_LOG_DIR=/var/log/django
DJANGO_LOG_LEVEL=INFO

# Cookie domain (for subdomain support)
# Example: COOKIE_DOMAIN=.yourdomain.com
COOKIE_DOMAIN=.yourdomain.com

# Static file compression (if django-compressor is installed)
COMPRESS_ENABLED=true

# WhiteNoise cache max age (in seconds)
# Default: 3600 (1 hour) for development, 31536000 (1 year) for production
WHITENOISE_MAX_AGE=31536000

# ============================================
# SECURITY NOTES
# ============================================
# 
# 1. Never commit this file or .env.production to version control
# 2. Use strong, unique passwords for all services
# 3. Rotate SECRET_KEY periodically
# 4. Use environment-specific values (dev/staging/prod)
# 5. Restrict database access to application server only
# 6. Use SSL/TLS for all database connections in production
# 7. Regularly update dependencies for security patches
# 8. Monitor logs for suspicious activity
# 9. Use a secrets manager (e.g., AWS Secrets Manager, HashiCorp Vault) for sensitive data
# 10. Implement proper backup and disaster recovery procedures

